[build-system]
requires = ["setuptools>=68"]
build-backend = "setuptools.build_meta"

[project]
name = "my_project"
version = "0.1.0"
requires-python = ">=3.10"
dependencies = []

[project.scripts]
my_project = "my_project.main_runner:main"

[tool.setuptools]
package-dir = {"" = "src"}
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "test*.py"]
python_functions = ["test_*"]
